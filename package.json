{
  "name": "plug-platform-atlas",
  "private": true,
  "version": "1.0.0",
  "description": "Plug Platform Atlas Monorepo",
  "scripts": {
    "dev": "pnpm --filter @plug-atlas/web dev",
    "dev:storybook": "pnpm --filter @plug-atlas/ui storybook",
    "build": "pnpm -r build",
    "build:storybook": "pnpm --filter @plug-atlas/ui build-storybook",
    "preview": "pnpm --filter @plug-atlas/web preview",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rimraf node_modules"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.9.0"
}